        }
        

      ],
        "poolLanes": [
          {
            "name": "Check-in",
            "parentPoolId": "pool_1"
          }
        ],

        "nodes": [
          {
            "type": "startEvent",
            "name": "Arrival",
            "task": "start",
            "parentPoolId": "pool_1",
            "parentLaneId": "lane_1"
          },

          {
          "type": "activity",
          "name": "Baggage-drop",
          "task": "dropLuggage",
          "parentPoolId": ["pool_1"],
          "parentLaneId": ["lane_1"],
          "setPassengerVariables": {"Luggage": false}
          },
          {
          "type": "xorGateway",
          "name": "Has luggage",
          "task": "checkLuggage",
          "parentPoolId": ["pool_1"],
          "parentLaneId": ["lane_1"],
          "checkPassengerVariable": {"Luggage": true}
        },
        
        {
          "type": "inclusiveGateway",
          "name": "Can check in",
          "task": "readyToCheckIn",
          "parentPoolId": ["pool_1"],
          "parentLaneId": ["lane_1"],
          "checkPassengerVariable": {
            "Passport": true,
            "Luggage": false,
            "CheckedIn": false
          }
        },

          {
            "type": "sndEvent",
            "name": "To Security",
            "task": "end",
            "parentPoolId": "pool_1",
            "parentLaneId": "lane_1"
          }

        ]
