        {
          "tokenId": "token_1",
          "type": "Passenger",
          "name": "Thomas",
          "variables": {
            "CheckIn": false,
            "Luggage": false,
            "Passport": true,
            "PersonalItems": true
          },
          "tasksHint": "is carrying a large suitcase",
          "requiredTasks":[["start", "checkLuggage"],["checkLuggage", "dropLuggage"],["dropLuggage", "readyToCheckIn"], ["readyToCheckIn","end"]]

        },
        {
          "tokenId": "token_2",
