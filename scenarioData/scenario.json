{
  "schemaVersion": "1.0",
  "metadata": {
    "createdBy": "Przybyslaw S. Paz",
    "dateCreated": "2025-10-12",
    "documentVersion": "1.0"
  },
  "aboutScenarios": {
    "mainTitle": "Airport Check-in and Security Process",
    "moduleDescription": "Learn BPMN by modeling a passenger's journey through airport check-in, security screening, and boarding",
    "poolName": "Airport"
  },
  
  "scenarios": 
  [
    {
      "scenarioId": 0,
      "scenarioTitle": "Check-In Process",
      "scenarioDescription": "Passengers need to check in, and drop off their bags before continuing.",
      "tokens": [
        {
          "tokenId": "token_1",
          "type": "Passenger",
          "name": "Thomas",
          "variables": {
            "CheckIn": false,
            "Luggage": false,
            "Passport": true,
            "PersonalItems": true
          },
          "tasksHint": "is carrying a large suitcase",
          "requiredTasks":[["start", "checkLuggage"],["checkLuggage", "dropLuggage"],["dropLuggage", "readyToCheckIn"], ["readyToCheckIn","end"]]

        },
        {
          "tokenId": "token_2",
          "type": "Passenger",
          "name": "Håkon",
          "variables": {
            "CheckIn": false,
            "Luggage": true,
            "Passport": true,
            "PersonalItems": true
          },
          "tasksHint": "is travelling with a small backpack",
          "requiredTasks":[["start", "checkLuggage"],["checkLuggage", "readyToCheckIn"], ["readyToCheckIn","end"]]
        },
        {
          "tokenId": "token_3",
          "type": "Passenger",
          "name": "Silje",
          "variables": {
            "CheckIn": false,
            "Luggage": true,
            "Passport": true,
            "PersonalItems": true
          },
          "tasksHint": "is travelling with a small backpack, and large suitcase",
          "requiredTasks":[["start", "checkLuggage"],["checkLuggage", "dropLuggage"],["dropLuggage", "readyToCheckIn"], ["readyToCheckIn","end"]]
        }
        

      ],
        "poolLanes": [
          {
            "name": "Check-in",
            "parentPoolId": "pool_1"
          }
        ],

        "nodes": [
          {
            "type": "startEvent",
            "name": "Arrival",
            "task": "start",
            "parentPoolId": "pool_1",
            "parentLaneId": "lane_1"
          },

          {
          "type": "activity",
          "name": "Baggage-drop",
          "task": "dropLuggage",
          "parentPoolId": ["pool_1"],
          "parentLaneId": ["lane_1"],
          "setPassengerVariables": {"Luggage": false}
          },
          {
          "type": "xorGateway",
          "name": "Has luggage",
          "task": "checkLuggage",
          "parentPoolId": ["pool_1"],
          "parentLaneId": ["lane_1"],
          "checkPassengerVariable": {"Luggage": true}
        },
        
        {
          "type": "inclusiveGateway",
          "name": "Can check in",
          "task": "readyToCheckIn",
          "parentPoolId": ["pool_1"],
          "parentLaneId": ["lane_1"],
          "checkPassengerVariable": {
            "Passport": true,
            "Luggage": false,
            "CheckedIn": false
          }
        },

          {
            "type": "endEvent",
            "name": "To Security",
            "task": "end",
            "parentPoolId": "pool_1",
            "parentLaneId": "lane_1"
          }

        ]
    },
    {
      "scenarioId": 1,
      "scenarioTitle": "Security Checkpoint",
      "scenarioDescription": "While most passengers only require a basic security check, some passengers are selected for a more thorough search.",
      "tokens": [
         {
          "tokenId": "token_1",
          "type": "Passenger",
          "name": "Thomas",
          "variables": {
            "CheckIn": false,
            "Luggage": false,
            "Passport": true,
            "PersonalItems": true
          },
          "tasksHint": "forgot to leave his pocket knife at home",
          "requiredTasks":
          [
            ["end", "xRayAndMetalDetector"],
            ["xRayAndMetalDetector", "securityMetalDetector"], 
            ["xRayAndMetalDetector","securityXray"],
            ["securityXray","securityAdditional"],          
            ["securityMetalDetector","securityAdditional"],
            ["securityAdditional","securityBodyScan"],
            ["securityBodyScan","securityComplete"],
            ["securityComplete","end"]
          ]
            

        },
        {
          "tokenId": "token_2",
          "type": "Passenger",
          "name": "Håkon",
          "variables": {
            "CheckIn": false,
            "Luggage": true,
            "Passport": true,
            "PersonalItems": true
          },
          "tasksHint": "carries a bottle of wine, and a laptop in their backpack.",
          "requiredTasks":
          [
            ["end", "xRayAndMetalDetector"],
            ["xRayAndMetalDetector", "securityMetalDetector"], 
            ["xRayAndMetalDetector","securityXray"],
            ["securityXray","securityAdditional"],          
            ["securityMetalDetector","securityAdditional"],
            ["securityAdditional","securityComplete"],
            ["securityComplete","end"]
          ]

        },
        {
          "tokenId": "token_3",
          "type": "Passenger",
          "name": "Silje",
          "variables": {
            "CheckIn": false,
            "Luggage": true,
            "Passport": true,
            "PersonalItems": true
          },
          "tasksHint": "is nervously looking around..",
          "requiredTasks":
          [
            ["end", "xRayAndMetalDetector"],
            ["xRayAndMetalDetector", "securityMetalDetector"], 
            ["xRayAndMetalDetector","securityXray"],
            ["securityXray","securityAdditional"],          
            ["securityMetalDetector","securityAdditional"],
            ["securityAdditional","securityComplete"],
            ["securityComplete","end"]
          ]
        }
        
        

      ],
        "poolLanes": [
          {
            "name": "Check-in",
            "parentPoolId": "pool_1"
          },
          {
            "name": "Security check",
            "parentPoolId": "pool_1"
          }
        ],

        "nodes": [

          
           {
          "type": "activity",
          "name": "Carry-on X-ray",
          "task": "securityXray",
          "parentPoolId": ["pool_1"],
          "parentLaneId": ["lane_1"],
          "setPassengerVariables": {"Luggage": false}
          },

          {
          "type": "andGateway",
          "name": "Basic Security Check",
          "task": "xRayAndMetalDetector",
          "parentPoolId": ["pool_1"],
          "parentLaneId": ["lane_1"],
          "checkPassengerVariable": {
            "Passport": true,
            "Luggage": false,
            "CheckedIn": false
            }
          },

          {
          "type": "activity",
          "name": "Metal Detector",
          "task": "securityMetalDetector",
          "parentPoolId": ["pool_1"],
          "parentLaneId": ["lane_1"],
          "setPassengerVariables": {"Luggage": false}
          },

          {
          "type": "activity",
          "name": "Additional Body Scan",
          "task": "securityBodyScan",
          "parentPoolId": ["pool_1"],
          "parentLaneId": ["lane_1"],
          "setPassengerVariables": {"Luggage": false}
          },

          {
          "type": "xorGateway",
          "name": "Additional Check Required?",
          "task": "securityAdditional",
          "parentPoolId": ["pool_1"],
          "parentLaneId": ["lane_1"],
          "checkPassengerVariable": {"Luggage": true}
        },


          {
          "type": "xorGateway",
          "name": "Security Check Complete",
          "task": "securityComplete",
          "parentPoolId": ["pool_1"],
          "parentLaneId": ["lane_1"],
          "checkPassengerVariable": {"Luggage": true}
        },
        


          {
            "type": "endEvent",
            "name": "To Amenities",
            "task": "end",
            "parentPoolId": "pool_1",
            "parentLaneId": "lane_1"
          }

        ]
    }
  ]
}